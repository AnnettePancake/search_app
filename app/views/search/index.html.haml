.row
  .col-md-6.col-md-offset-3.vertical-center
    .input-group.search
      = text_field_tag :term, '', class: 'form-control input-lg'
      %span.input-group-btn
        = button_tag 'Search', class: 'btn btn-default btn-lg search_button'

  .col-md-6.col-md-offset-3.info
    .progress.progress-striped.active
      .progress-bar.progress-bar-info

    .panel.panel-info.dimensions
      .panel-heading
        %h3.panel-title= 'Dimensions:'
      .panel-body

    .panel.panel-warning.error_messages
      .panel-heading
        %h3.panel-title= 'Errors:'
      .panel-body
